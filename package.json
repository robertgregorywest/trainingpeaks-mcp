{
  "name": "trainingpeaks-mcp",
  "version": "0.12.2",
  "description": "MCP server for programmatic access to your TrainingPeaks data",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "trainingpeaks-mcp": "./dist/mcp/stdio.js",
    "trainingpeaks-mcp-http": "./dist/mcp/http.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp/stdio.js",
    "start:http": "node dist/mcp/http.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --exclude tests/integration/**",
    "test:watch": "vitest --exclude tests/integration/**",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage --exclude tests/integration/**",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "explore": "tsx scripts/explore.ts",
    "explore:workouts": "tsx scripts/explore-workouts.ts",
    "explore:intervals": "tsx scripts/explore-intervals.ts",
    "explore:fitness": "tsx scripts/explore-fitness.ts",
    "explore:strength": "tsx scripts/explore-strength.ts",
    "explore:peaks": "tsx scripts/explore-peaks.ts",
    "explore:power-curve": "tsx scripts/explore-power-curve.ts",
    "mcpb:pack": "mcpb pack"
  },
  "keywords": [
    "trainingpeaks",
    "fitness",
    "training",
    "api",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Rob West <robertgregorywest@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertgregorywest/trainingpeaks-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/robertgregorywest/trainingpeaks-mcp/issues"
  },
  "homepage": "https://github.com/robertgregorywest/trainingpeaks-mcp#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "tsx": "^4.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@garmin/fitsdk": "^21.171.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.0.0",
    "playwright": "^1.57.0",
    "zod": "^3.24.0"
  }
}
